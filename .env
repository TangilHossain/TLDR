# Facebook Post Scraper Configuration

# Browser and extension settings
EXTENSION_NAME="Facebook Post Scraper"
EXTENSION_VERSION="1.0.0"
MANIFEST_VERSION=3

# Facebook scraping settings
MAX_POSTS_PER_SCRAPE=15
SCRAPE_TIMEOUT=5000
AUTO_SCROLL_ENABLED=true
AUTO_SCROLL_DISTANCE=100

# Data storage settings
MAX_STORED_POSTS=1000
DATA_RETENTION_DAYS=30
AUTO_CLEANUP_ENABLED=true

# Export settings
EXPORT_FORMAT="json"
EXPORT_FILENAME="facebook_posts"
INCLUDE_IMAGES=true
INCLUDE_HASHTAGS=true

# UI settings
POPUP_WIDTH=400
POPUP_HEIGHT=600
THEME="gradient"
SHOW_PREVIEW=true
MAX_PREVIEW_LENGTH=100

# Debug settings
DEBUG_MODE=false
CONSOLE_LOGGING=true
PERFORMANCE_MONITORING=false

# Facebook-specific settings
FACEBOOK_DOMAINS=["facebook.com", "www.facebook.com"]
RESPECT_ROBOTS_TXT=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DELAY=1000

# Privacy settings
ANONYMIZE_DATA=false
EXCLUDE_PRIVATE_POSTS=true
RESPECT_PRIVACY_SETTINGS=true

# Feature flags
EXTRACT_IMAGES=true
EXTRACT_HASHTAGS=true
EXTRACT_ENGAGEMENT=true
EXTRACT_TIMESTAMPS=true
EXTRACT_URLS=true
